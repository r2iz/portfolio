---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
    const posts: CollectionEntry<"blog">[] = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

type Props = {
    post: CollectionEntry<"blog">;
};
const { post } = Astro.props as Props;
const { Content } = await post.render();
---

<Layout
    title={`${post.data.title} | Blog`}
    description={post.data.description ?? post.data.title}
>
    <main id="main" class="container">
        <nav class="breadcrumb">
            <a href="/blog" class="back-link">‚Üê Blog</a>
        </nav>

        <article class="post-article">
            <header class="post-header">
                <h1 class="post-title">{post.data.title}</h1>
                <time datetime={post.data.date.toISOString()} class="post-date">
                    {post.data.date.toLocaleDateString("ja-JP")}
                </time>
            </header>
            <div class="post-content">
                <Content />
            </div>
        </article>
    </main>

    <style>
        .container {
            max-width: 760px;
            margin: 0 auto;
            padding: 40px 24px 80px;
        }

        .breadcrumb {
            margin-bottom: 28px;
        }

        .post-article {
            max-width: 68ch;
            margin: 0 auto;
            display: grid;
            gap: 32px;
        }

        .post-header {
            display: grid;
            gap: 12px;
            padding-bottom: 24px;
            border-bottom: 1px solid var(--color-border);
            text-align: left;
        }

        .post-title {
            margin: 0;
            font-size: 1.4rem;
            font-weight: 500;
            letter-spacing: 0.04em;
            line-height: 1.35;
            color: var(--color-text);
        }

        .post-date {
            color: var(--color-text-muted);
            font-size: 0.74rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            font-variant-numeric: tabular-nums;
        }

        .post-content {
            display: grid;
            gap: 24px;
            font-size: 0.96rem;
            line-height: 1.7;
        }

        .post-content :global(h2) {
            margin: 32px 0 16px 0;
            font-size: 1.18rem;
            letter-spacing: 0.02em;
            font-weight: 500;
            color: var(--color-text);
        }

        .post-content :global(h3) {
            margin: 24px 0 12px 0;
            font-size: 1.04rem;
            letter-spacing: 0.01em;
            font-weight: 500;
            color: var(--color-text);
        }

        .post-content :global(p) {
            margin: 0;
            color: var(--color-text);
        }

        .post-content :global(ul),
        .post-content :global(ol) {
            margin: 0;
            padding-left: 24px;
        }

        .post-content :global(li) {
            margin-bottom: 8px;
            color: var(--color-text);
        }

        .post-content :global(blockquote) {
            margin: 16px 0;
            padding: 18px 22px;
            border-left: 3px solid var(--color-border-strong);
            background: var(--color-subtle);
        }

        .post-content :global(pre) {
            margin: 16px 0;
            padding: 18px;
            border: 1px solid var(--color-border);
            border-radius: 6px;
            overflow-x: auto;
            background: var(--color-subtle);
        }

        .post-content :global(code) {
            font-family: "SFMono-Regular", "Monaco", "Inconsolata",
                "Roboto Mono", monospace;
            font-size: 0.84rem;
        }

        .post-content :global(img) {
            max-width: 100%;
            border-radius: 6px;
        }

        @media (max-width: 640px) {
            .container {
                padding: 32px 16px 64px;
            }

            .post-article {
                gap: 24px;
            }

            .post-title {
                font-size: 1.28rem;
            }

            .post-content :global(h2) {
                font-size: 1.1rem;
            }

            .post-content :global(h3) {
                font-size: 0.98rem;
            }
        }
    </style>
</Layout>
