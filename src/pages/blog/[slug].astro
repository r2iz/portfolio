---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
    const posts: CollectionEntry<"blog">[] = await getCollection("blog");
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));
}

type Props = {
    post: CollectionEntry<"blog">;
};
const { post } = Astro.props as Props;
const { Content } = await post.render();
---

<Layout
    title={`${post.data.title} | Blog`}
    description={post.data.description ?? post.data.title}
>
    <main id="main" class="container">
        <nav class="breadcrumb">
            <a href="/blog" class="back-link">‚Üê Blog</a>
        </nav>

        <article class="post-article">
            <header class="post-header">
                <h1 class="post-title">{post.data.title}</h1>
                <time datetime={post.data.date.toISOString()} class="post-date">
                    {post.data.date.toLocaleDateString("ja-JP")}
                </time>
            </header>
            <div class="post-content">
                <Content />
            </div>
        </article>
    </main>

    <style>
        .container {
            max-width: 720px;
            margin: 0 auto;
            padding: 48px 24px;
        }

        .breadcrumb {
            margin-bottom: 32px;
        }

        .back-link {
            color: var(--color-text-muted);
            text-decoration: none;
            font-size: 0.9rem;
            transition: color 0.2s ease;
        }

        .back-link:hover {
            color: var(--color-text);
        }

        .post-article {
            max-width: 65ch;
            margin: 0 auto;
        }

        .post-header {
            margin-bottom: 48px;
            padding-bottom: 24px;
            border-bottom: 1px solid var(--color-border);
            text-align: center;
        }

        .post-title {
            font-size: 2rem;
            font-weight: 400;
            margin: 0 0 16px 0;
            line-height: 1.3;
            letter-spacing: -0.02em;
        }

        .post-date {
            color: var(--color-text-muted);
            font-size: 0.9rem;
        }

        .post-content {
            font-size: 1rem;
            line-height: 1.7;
        }

        .post-content :global(h2) {
            font-size: 1.5rem;
            font-weight: 500;
            margin: 48px 0 24px 0;
            line-height: 1.3;
        }

        .post-content :global(h3) {
            font-size: 1.25rem;
            font-weight: 500;
            margin: 32px 0 16px 0;
            line-height: 1.3;
        }

        .post-content :global(p) {
            margin: 0 0 24px 0;
        }

        .post-content :global(ul),
        .post-content :global(ol) {
            margin: 0 0 24px 0;
            padding-left: 24px;
        }

        .post-content :global(li) {
            margin-bottom: 8px;
        }

        .post-content :global(blockquote) {
            margin: 32px 0;
            padding: 20px 24px;
            border-left: 3px solid var(--color-accent);
            background: var(--color-bg);
            filter: brightness(0.98);
        }

        .post-content :global(pre) {
            margin: 32px 0;
            padding: 20px;
            border: 1px solid var(--color-border);
            border-radius: 8px;
            overflow-x: auto;
            background: var(--color-bg);
            filter: brightness(0.98);
        }

        .post-content :global(code) {
            font-family: "SFMono-Regular", "Monaco", "Inconsolata",
                "Roboto Mono", monospace;
            font-size: 0.875rem;
        }

        @media (max-width: 640px) {
            .container {
                padding: 32px 16px;
            }

            .breadcrumb {
                margin-bottom: 24px;
            }

            .post-header {
                margin-bottom: 32px;
                padding-bottom: 20px;
            }

            .post-title {
                font-size: 1.75rem;
            }

            .post-content :global(h2) {
                font-size: 1.375rem;
                margin: 32px 0 20px 0;
            }

            .post-content :global(h3) {
                font-size: 1.125rem;
                margin: 24px 0 16px 0;
            }
        }
    </style>
</Layout>
