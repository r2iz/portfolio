---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const posts: CollectionEntry<"blog">[] = await getCollection("blog");

posts.sort((a, b) => (a.data.date < b.data.date ? 1 : -1));

const techPosts = posts.filter((post) => post.data.category === "tech");
const dailyPosts = posts.filter((post) => post.data.category === "daily");

const categoryLabels = {
    tech: "技術",
    daily: "日常",
};
---

<Layout title="Blog | ねれ" description="ねれのブログ。">
    <main id="main" class="container">
        <header class="header">
            <div class="heading">
                <p class="eyebrow">Writing</p>
                <h1 class="title">Blog</h1>
            </div>
            <div class="back-nav">
                <a class="back-link" href="/">← Home</a>
            </div>
        </header>

        <div class="category-nav">
            <button class="category-btn active" data-category="all">All</button>
            <button class="category-btn" data-category="tech">Tech</button>
            <button class="category-btn" data-category="daily">Daily</button>
        </div>

        {
            posts.length === 0 ? (
                <p class="empty-state">まだ記事がありません。</p>
            ) : (
                <>
                    <div class="posts-section" data-category="all">
                        <ul class="post-list">
                            {posts.map((post) => (
                                <li
                                    class="post-item"
                                    data-category={post.data.category}
                                >
                                    <a
                                        class="post-link"
                                        href={`/blog/${post.slug}`}
                                    >
                                        <time
                                            datetime={post.data.date.toISOString()}
                                            class="post-date"
                                        >
                                            {post.data.date.toLocaleDateString(
                                                "en-US",
                                                {
                                                    year: "numeric",
                                                    month: "2-digit",
                                                    day: "2-digit",
                                                }
                                            )}
                                        </time>
                                        <div class="post-info">
                                            <h2 class="post-title">
                                                {post.data.title}
                                            </h2>
                                            {/* カテゴリラベルはシンプル化のためここでは表示せず、フィルタで表現するか、必要なら再配置 */}
                                        </div>
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>

                    <div class="posts-section hidden" data-category="tech">
                        <ul class="post-list">
                            {techPosts.map((post) => (
                                <li class="post-item">
                                    <a
                                        class="post-link"
                                        href={`/blog/${post.slug}`}
                                    >
                                        <time
                                            datetime={post.data.date.toISOString()}
                                            class="post-date"
                                        >
                                            {post.data.date.toLocaleDateString(
                                                "en-US",
                                                {
                                                    year: "numeric",
                                                    month: "2-digit",
                                                    day: "2-digit",
                                                }
                                            )}
                                        </time>
                                        <div class="post-info">
                                            <h2 class="post-title">
                                                {post.data.title}
                                            </h2>
                                        </div>
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>

                    <div class="posts-section hidden" data-category="daily">
                        <ul class="post-list">
                            {dailyPosts.map((post) => (
                                <li class="post-item">
                                    <a
                                        class="post-link"
                                        href={`/blog/${post.slug}`}
                                    >
                                        <time
                                            datetime={post.data.date.toISOString()}
                                            class="post-date"
                                        >
                                            {post.data.date.toLocaleDateString(
                                                "en-US",
                                                {
                                                    year: "numeric",
                                                    month: "2-digit",
                                                    day: "2-digit",
                                                }
                                            )}
                                        </time>
                                        <div class="post-info">
                                            <h2 class="post-title">
                                                {post.data.title}
                                            </h2>
                                        </div>
                                    </a>
                                </li>
                            ))}
                        </ul>
                    </div>
                </>
            )
        }
    </main>

    <style>
        .container {
            max-width: 680px;
            margin: 0 auto;
            padding: 64px 24px 96px;
        }

        /* Header Styles */
        .header {
            margin-bottom: 48px;
            display: flex;
            justify-content: space-between;
            align-items: flex-end;
            border-bottom: 1px solid var(--color-border);
            padding-bottom: 16px;
            animation: fade-in 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        }

        .heading {
            display: grid;
            gap: 8px;
        }

        .eyebrow {
            margin: 0;
            font-size: 0.75rem;
            letter-spacing: 0.15em;
            text-transform: uppercase;
            color: var(--color-text-muted);
            font-weight: 500;
        }

        .title {
            margin: 0;
            font-size: 1.125rem;
            font-weight: 600;
            letter-spacing: 0.05em;
            color: var(--color-text);
        }

        .back-link {
            font-size: 0.85rem;
            color: var(--color-text-muted);
            text-decoration: none;
            transition: color 0.2s;
        }

        .back-link:hover {
            color: var(--color-text);
        }

        /* Category Navigation */
        .category-nav {
            display: flex;
            gap: 8px;
            margin-bottom: 40px;
            opacity: 0;
            animation: fade-up 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 0.1s forwards;
        }

        .category-btn {
            background: transparent;
            border: 1px solid var(--color-border);
            color: var(--color-text-muted);
            padding: 6px 16px;
            border-radius: 99px;
            font-size: 0.8rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .category-btn:hover {
            border-color: var(--color-text);
            color: var(--color-text);
        }

        /* Active State logic (preserved) */
        .category-btn.active {
            background: var(--color-text);
            color: var(--color-bg); /* Assuming bg is white, text is black */
            border-color: var(--color-text);
        }

        /* Post List */
        .posts-section {
            opacity: 0;
            animation: fade-up 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) 0.2s forwards;
        }

        .posts-section.hidden {
            display: none;
        }

        .post-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .post-link {
            display: grid;
            grid-template-columns: 100px 1fr;
            align-items: baseline;
            padding: 16px 0;
            text-decoration: none;
            color: var(--color-text);
            border-bottom: 1px solid var(--color-border);
            transition: opacity 0.2s;
            gap: 16px;
        }

        .post-item:last-child .post-link {
            border-bottom: none;
        }

        .post-link:hover {
            opacity: 0.6;
        }

        .post-link:hover .post-title {
            text-decoration: underline;
            text-underline-offset: 4px;
        }

        .post-date {
            font-size: 0.8rem;
            color: var(--color-text-muted);
            font-family: monospace;
            opacity: 0.8;
        }

        .post-title {
            margin: 0;
            font-size: 0.95rem;
            font-weight: 400;
            line-height: 1.6;
        }

        .empty-state {
            text-align: center;
            color: var(--color-text-muted);
            margin-top: 48px;
        }

        @media (max-width: 640px) {
            .container {
                padding: 48px 20px 80px;
            }
            .post-link {
                grid-template-columns: 1fr;
                gap: 4px;
            }
        }

        @keyframes fade-in {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        @keyframes fade-up {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const categoryBtns = document.querySelectorAll(".category-btn");
            const postsSections = document.querySelectorAll(".posts-section");

            categoryBtns.forEach((btn) => {
                btn.setAttribute(
                    "aria-pressed",
                    btn.classList.contains("active") ? "true" : "false"
                );
                btn.addEventListener(
                    "click",
                    function (this: HTMLButtonElement) {
                        const targetCategory = this.dataset.category;

                        categoryBtns.forEach((b) => {
                            b.classList.remove("active");
                            b.setAttribute("aria-pressed", "false");
                        });
                        this.classList.add("active");
                        this.setAttribute("aria-pressed", "true");

                        postsSections.forEach((section) => {
                            // TypeScript error workaround if needed, casting to HTMLElement
                            const s = section as HTMLElement;
                            if (s.dataset.category === targetCategory) {
                                s.classList.remove("hidden");
                            } else {
                                s.classList.add("hidden");
                            }
                        });
                    }
                );
            });
        });
    </script>
</Layout>
