---
import Layout from "../layouts/Layout.astro";
import siteData from "../assets/data.json";
import type { SiteData } from "../types/site";
const typedSiteData = siteData as SiteData;
---

<Layout title="ねれ | Portfolio" description="ねれのポートフォリオ">
    <main id="main" class="container">
        <header class="header">
            <div class="heading">
                <p class="eyebrow">Portfolio</p>
                <h1 class="name">ねれ / r2iz</h1>
            </div>
        </header>

        <section class="section">
            <div class="section-heading">
                <h2>Links</h2>
            </div>
            <div class="section-body">
                <ul class="links">
                    {
                        typedSiteData.links.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    target={
                                        link.isExternal ? "_blank" : undefined
                                    }
                                    rel={
                                        link.isExternal
                                            ? "me noopener noreferrer"
                                            : undefined
                                    }
                                >
                                    {link.text}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </section>

        <section class="section">
            <div class="section-heading">
                <h2>About</h2>
            </div>
            <div class="section-body">
                <p>
                    コンピューターのオタクのなり損ない。コンパイラやネットワーク技術に興味があります。電子音楽、電音部、音楽ゲーム、活字を読むこと、VTuberが好きです。
                </p>
            </div>
        </section>

        <section class="section">
            <div class="section-heading">
                <h2>Skills</h2>
            </div>
            <div class="section-body">
                <ul class="skills-list">
                    {typedSiteData.skills.map((skill) => <li>{skill}</li>)}
                </ul>
            </div>
        </section>

        <section class="section">
            <div class="section-heading">
                <h2>Projects</h2>
            </div>
            <div class="section-body">
                <ul class="projects-list">
                    {
                        typedSiteData.projects.map((project) => (
                            <li>
                                <div class="project-meta">
                                    <h3>{project.title}</h3>
                                    <span class="project-link-label">
                                        {project.link.text}
                                    </span>
                                </div>
                                <p>{project.description}</p>
                                <a
                                    href={project.link.href}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    Visit
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </section>

        <section class="section">
            <div class="section-heading">
                <h2>Experience</h2>
            </div>
            <div class="section-body">
                <ol class="timeline">
                    {
                        typedSiteData.experience.map((exp) => (
                            <li>
                                <span
                                    class="timeline-node"
                                    aria-hidden="true"
                                />
                                <div class="timeline-content">
                                    <span class="timeline-period">
                                        {exp.period}
                                    </span>
                                    <p>{exp.description}</p>
                                </div>
                            </li>
                        ))
                    }
                </ol>
            </div>
        </section>

        <section class="section">
            <div class="section-heading">
                <h2>Contact</h2>
            </div>
            <div class="section-body">
                <p>
                    <a class="contact-link" href="mailto:nere531@outlook.com">
                        nere531@outlook.com
                    </a>
                </p>
            </div>
        </section>
    </main>

    <style>
        .container {
            max-width: 760px;
            margin: 0 auto;
            padding: 40px 24px 80px;
        }

        .header {
            margin-bottom: 48px;
            display: grid;
            gap: 24px;
            animation: fade-up 0.6s ease forwards;
            opacity: 0;
        }

        .heading {
            display: grid;
            gap: 12px;
        }

        .eyebrow {
            margin: 0;
            font-size: 0.72rem;
            letter-spacing: 0.12em;
            text-transform: uppercase;
            color: var(--color-text-muted);
        }

        .name {
            font-size: 1.35rem;
            margin: 0;
            font-weight: 500;
            letter-spacing: 0.04em;
            color: var(--color-text);
        }

        .tagline {
            margin: 0;
            font-size: 0.95rem;
            color: var(--color-text-muted);
            letter-spacing: 0.04em;
        }

        .header-meta {
            display: flex;
            flex-wrap: wrap;
            gap: 12px 24px;
            list-style: none;
            padding: 0;
            margin: 0;
            font-size: 0.78rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            color: var(--color-text-muted);
        }

        .section {
            padding: 32px 0;
            margin: 0;
            border-top: 1px solid var(--color-border);
            display: grid;
            grid-template-columns: 160px 1fr;
            gap: 28px;
            opacity: 0;
            transform: translateY(12px);
            animation: fade-up 0.6s ease forwards;
            animation-delay: 0.1s;
        }

        .section:first-of-type {
            border-top: 0;
            padding-top: 0;
            animation-delay: 0s;
        }

        .section:last-child {
            padding-bottom: 0;
        }

        .section:nth-of-type(2) {
            animation-delay: 0.16s;
        }

        .section:nth-of-type(3) {
            animation-delay: 0.22s;
        }

        .section:nth-of-type(4) {
            animation-delay: 0.28s;
        }

        .section:nth-of-type(5) {
            animation-delay: 0.34s;
        }

        .section:nth-of-type(6) {
            animation-delay: 0.4s;
        }

        .section-heading {
            position: sticky;
            top: 96px;
            align-self: start;
        }

        h2 {
            font-size: 0.72rem;
            margin: 0;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.12em;
            color: var(--color-text-muted);
        }

        .section-body {
            display: grid;
            gap: 18px;
        }

        p {
            font-size: 0.96rem;
            line-height: 1.7;
            margin: 0 0 16px 0;
        }

        p:last-child {
            margin-bottom: 0;
        }

        .links {
            list-style: none;
            padding: 0;
            margin: 0;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
        }

        .links li {
            position: relative;
        }

        .links a {
            font-size: 0.88rem;
            color: var(--color-text);
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 12px;
            width: 100%;
            padding: 10px 0;
            border-bottom: 1px solid var(--color-border);
            transition:
                color 0.25s ease,
                transform 0.25s ease,
                background-color 0.25s ease;
        }

        .links a::after {
            content: "->";
            font-size: 0.82rem;
            color: inherit;
            transition: transform 0.25s ease;
        }

        .links a:hover {
            color: var(--color-text);
            background: var(--color-subtle);
            transform: translateX(4px);
        }

        .links a:hover::after {
            transform: translateX(6px);
        }

        .skills-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .skills-list li {
            padding: 8px 14px;
            border: 1px solid var(--color-border);
            border-radius: 999px;
            font-size: 0.82rem;
            letter-spacing: 0.04em;
            background: var(--color-subtle);
            transition:
                transform 0.25s ease,
                border-color 0.25s ease,
                background-color 0.25s ease;
        }

        .skills-list li:hover {
            transform: translateY(-3px);
            border-color: var(--color-border-strong);
            background: var(--color-card-bg);
        }

        .projects-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: grid;
            gap: 24px;
        }

        .projects-list li {
            border: 1px solid var(--color-border);
            border-radius: 6px;
            padding: 24px;
            background: var(--color-card-bg);
            display: grid;
            gap: 12px;
            transition:
                transform 0.28s ease,
                border-color 0.28s ease,
                background-color 0.28s ease;
        }

        .projects-list li:hover {
            transform: translateY(-5px);
            border-color: var(--color-border-strong);
            background: var(--color-subtle);
        }

        .project-meta {
            display: flex;
            align-items: baseline;
            justify-content: space-between;
            gap: 12px;
        }

        .projects-list h3 {
            margin: 0;
            font-size: 0.98rem;
            font-weight: 500;
            letter-spacing: 0.04em;
            text-transform: none;
        }

        .project-link-label {
            font-size: 0.72rem;
            letter-spacing: 0.08em;
            text-transform: uppercase;
            color: var(--color-text-muted);
        }

        .projects-list p {
            color: var(--color-text-muted);
            margin: 0;
            font-size: 0.88rem;
            line-height: 1.6;
        }

        .projects-list a {
            font-size: 0.82rem;
            color: var(--color-text);
            align-self: flex-start;
            border-bottom: 1px solid var(--color-border);
            padding-bottom: 2px;
            letter-spacing: 0.04em;
            text-transform: uppercase;
            transition:
                color 0.2s ease,
                border-color 0.2s ease;
        }

        .projects-list a:hover {
            color: var(--color-text);
            border-bottom-color: var(--color-border-strong);
        }

        .timeline {
            position: relative;
            margin: 0;
            padding: 0 0 8px 0;
            list-style: none;
            display: grid;
            gap: 28px;
        }

        .timeline::before {
            content: "";
            position: absolute;
            top: 0;
            bottom: 0;
            left: 18px;
            width: 1px;
            background: var(--color-border);
        }

        .timeline li {
            list-style: none;
            position: relative;
            padding-left: 48px;
            display: grid;
            gap: 10px;
        }

        .timeline-node {
            position: absolute;
            top: 0.65rem;
            left: 18px;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            border: 1px solid var(--color-border-strong);
            background: var(--color-bg);
            transform: translate(-50%, -50%);
        }

        .timeline-content {
            display: grid;
            gap: 6px;
            transition: transform 0.24s ease;
        }

        .timeline-period {
            font-size: 0.72rem;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            color: var(--color-text-muted);
            transition: color 0.24s ease;
        }

        .timeline p {
            margin: 0;
            color: var(--color-text-muted);
            font-size: 0.86rem;
            line-height: 1.6;
            transition: color 0.24s ease;
        }

        .contact-link {
            color: var(--color-text);
            border-bottom: 1px solid var(--color-border);
            padding-bottom: 2px;
            letter-spacing: 0.04em;
            transition:
                color 0.2s ease,
                border-color 0.2s ease;
        }

        .contact-link:hover {
            color: var(--color-text);
            border-bottom-color: var(--color-border-strong);
        }

        @media (max-width: 640px) {
            .container {
                padding: 32px 16px 64px;
            }

            .header {
                margin-bottom: 32px;
            }

            .name {
                font-size: 1.22rem;
            }

            .header-meta {
                flex-direction: column;
                gap: 8px;
            }

            .section {
                grid-template-columns: 1fr;
                gap: 20px;
                padding: 28px 0;
            }

            .section-heading {
                position: static;
            }

            .links {
                grid-template-columns: 1fr;
            }

            .projects-list li {
                padding: 20px;
            }

            .timeline {
                gap: 24px;
                padding-bottom: 12px;
            }

            .timeline::before {
                left: 14px;
            }

            .timeline li {
                padding-left: 40px;
            }

            .timeline-node {
                left: 14px;
                top: 0.7rem;
            }

            .timeline-content {
                gap: 8px;
            }
        }

        @media (min-width: 768px) {
            .header {
                grid-template-columns: minmax(0, 1fr) 240px;
                align-items: end;
            }

            .header-meta {
                justify-content: flex-end;
                text-align: right;
            }

            .section {
                grid-template-columns: 180px 1fr;
                gap: 40px;
            }
        }

        @media (hover: hover) and (pointer: fine) {
            .skills-list li:hover {
                transform: translateY(-6px);
            }

            .projects-list li:hover {
                transform: translateY(-8px);
            }

            .timeline-content:hover {
                transform: translateX(6px);
            }

            .timeline-content:hover .timeline-period,
            .timeline-content:hover p {
                color: var(--color-text);
            }
        }

        @media (prefers-reduced-motion: reduce) {
            *,
            *::before,
            *::after {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
                scroll-behavior: auto !important;
            }
        }

        @keyframes fade-up {
            from {
                opacity: 0;
                transform: translateY(12px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</Layout>
