---
import Layout from "../layouts/Layout.astro";
import siteData from "../assets/data.json";
import type { SiteData } from "../types/site";
const typedSiteData = siteData as SiteData;
---

<Layout title="ねれ | Portfolio" description="ねれのポートフォリオ">
    <main id="main" class="container">
        <header class="header">
            <div class="heading">
                <p class="eyebrow">Portfolio</p>
                <h1 class="name">ねれ / r2iz</h1>
            </div>
        </header>

        <section class="section">
            <div class="section-heading">
                <h2>Links</h2>
            </div>
            <div class="section-body">
                <ul class="links">
                    {
                        typedSiteData.links.map((link) => (
                            <li>
                                <a
                                    href={link.href}
                                    target={
                                        link.isExternal ? "_blank" : undefined
                                    }
                                    rel={
                                        link.isExternal
                                            ? "me noopener noreferrer"
                                            : undefined
                                    }
                                >
                                    <span class="link-text">{link.text}</span>
                                    <span class="link-arrow">→</span>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </section>

        <section class="section">
            <div class="section-heading">
                <h2>About</h2>
            </div>
            <div class="section-body">
                <p>
                    コンピューターのオタクのなり損ない。コンパイラやネットワーク技術に興味があります。電子音楽、電音部、音楽ゲーム、活字を読むこと、VTuberが好きです。
                </p>
            </div>
        </section>

        <section class="section">
            <div class="section-heading">
                <h2>Skills</h2>
            </div>
            <div class="section-body">
                <ul class="skills-list">
                    {typedSiteData.skills.map((skill) => <li>{skill}</li>)}
                </ul>
            </div>
        </section>

        <section class="section">
            <div class="section-heading">
                <h2>Projects</h2>
            </div>
            <div class="section-body">
                <ul class="projects-list">
                    {
                        typedSiteData.projects.map((project) => (
                            <li>
                                <a
                                    href={project.link.href}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="project-card"
                                >
                                    <div class="project-header">
                                        <h3>{project.title}</h3>
                                        <span class="arrow">↗</span>
                                    </div>
                                    <p class="project-desc">
                                        {project.description}
                                    </p>
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </section>

        <section class="section">
            <div class="section-heading">
                <h2>Experience</h2>
            </div>
            <div class="section-body">
                <ul class="experience-list">
                    {
                        typedSiteData.experience.map((exp) => (
                            <li>
                                <span class="exp-period">{exp.period}</span>
                                <span class="exp-desc">{exp.description}</span>
                            </li>
                        ))
                    }
                </ul>
            </div>
        </section>

        <section class="section">
            <div class="section-heading">
                <h2>Contact</h2>
            </div>
            <div class="section-body">
                <p>
                    <a class="contact-link" href="mailto:nere531@outlook.com">
                        nere531@outlook.com
                    </a>
                </p>
            </div>
        </section>
    </main>

    <style>
        .container {
            max-width: 680px;
            margin: 0 auto;
            padding: 64px 24px 96px;
        }

        /* Header */
        .header {
            margin-bottom: 64px;
            animation: fade-in 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        }

        .heading {
            display: grid;
            gap: 16px;
        }

        .eyebrow {
            margin: 0;
            font-size: 0.75rem;
            letter-spacing: 0.15em;
            text-transform: uppercase;
            color: var(--color-text-muted);
            font-weight: 500;
        }

        .name {
            font-size: 1.125rem;
            margin: 0;
            font-weight: 500;
            letter-spacing: 0.05em;
            color: var(--color-text);
        }

        /* Section Global */
        .section {
            margin-bottom: 56px;
            opacity: 0;
            animation: fade-up 0.8s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
        }

        .section:last-child {
            margin-bottom: 0;
        }

        .section:nth-of-type(1) {
            animation-delay: 0.1s;
        }
        .section:nth-of-type(2) {
            animation-delay: 0.2s;
        }
        .section:nth-of-type(3) {
            animation-delay: 0.3s;
        }
        .section:nth-of-type(4) {
            animation-delay: 0.4s;
        }
        .section:nth-of-type(5) {
            animation-delay: 0.5s;
        }
        .section:nth-of-type(6) {
            animation-delay: 0.6s;
        }

        .section-heading {
            margin-bottom: 20px;
        }

        h2 {
            font-size: 0.75rem;
            margin: 0;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.12em;
            color: var(--color-text);
            display: flex;
            align-items: center;
            gap: 12px;
        }
        h2::after {
            content: "";
            flex: 1;
            height: 1px;
            background-color: var(--color-border);
            opacity: 0.6;
        }

        .section-body {
        }

        p {
            font-size: 0.92rem;
            line-height: 1.75;
            margin: 0;
            color: var(--color-text);
        }

        /* Links */
        .links {
            list-style: none;
            padding: 0;
            margin: 0;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 12px;
        }

        .links a {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 14px 18px;
            border: 1px solid var(--color-border);
            border-radius: 4px;
            color: var(--color-text);
            text-decoration: none;
            font-size: 0.85rem;
            transition: all 0.2s ease;
            background: transparent;
        }

        .links a:hover {
            background: var(--color-text); /* 黒背景 */
            color: var(--color-bg); /* 白文字 */
            border-color: var(--color-text);
        }

        .link-arrow {
            font-size: 0.9rem;
            opacity: 0.4;
            transition: opacity 0.2s;
        }

        .links a:hover .link-arrow {
            opacity: 1;
        }

        /* Skills */
        .skills-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }

        .skills-list li {
            font-size: 0.8rem;
            padding: 6px 12px;
            border: 1px solid var(--color-border);
            border-radius: 99px;
            color: var(--color-text);
            background: transparent;
        }

        /* Projects */
        .projects-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 16px;
        }

        .project-card {
            display: block;
            height: 100%;
            padding: 20px;
            border: 1px solid var(--color-border);
            border-radius: 4px;
            text-decoration: none;
            transition: all 0.2s ease;
            background: transparent;
        }

        .project-card:hover {
            background: var(--color-subtle);
            border-color: var(--color-text);
        }

        .project-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 12px;
        }

        .project-card h3 {
            margin: 0;
            font-size: 0.92rem;
            font-weight: 500;
            color: var(--color-text);
            letter-spacing: 0.02em;
        }

        .project-card .arrow {
            font-size: 0.9rem;
            color: var(--color-text-muted);
            transition: transform 0.2s;
        }

        .project-card:hover .arrow {
            transform: translate(2px, -2px);
            color: var(--color-text);
        }

        .project-desc {
            font-size: 0.82rem;
            color: var(--color-text-muted);
            line-height: 1.6;
        }

        /* Experience */
        .experience-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: grid;
            gap: 24px;
        }

        .experience-list li {
            display: grid;
            grid-template-columns: 120px 1fr;
            gap: 16px;
            align-items: baseline;
        }

        .exp-period {
            font-size: 0.8rem;
            color: var(--color-text-muted);
            font-variant-numeric: tabular-nums;
            letter-spacing: 0.05em;
        }

        .exp-desc {
            font-size: 0.9rem;
            color: var(--color-text);
            line-height: 1.6;
        }

        /* Contact */
        .contact-link {
            display: inline-block;
            color: var(--color-text);
            text-decoration: none;
            border-bottom: 1px solid var(--color-border);
            padding-bottom: 2px;
            transition: border-color 0.2s;
            font-size: 0.9rem;
        }

        .contact-link:hover {
            border-bottom-color: var(--color-text);
        }

        /* Mobile Adjustments */
        @media (max-width: 640px) {
            .container {
                padding: 48px 20px 80px;
            }

            .header {
                margin-bottom: 48px;
            }

            .experience-list li {
                grid-template-columns: 1fr;
                gap: 4px;
            }

            .exp-period {
                font-size: 0.75rem;
            }
        }

        /* Animations */
        @keyframes fade-in {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes fade-up {
            from {
                opacity: 0;
                transform: translateY(16px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</Layout>
