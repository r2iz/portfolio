---
import Layout from "../layouts/Layout.astro";
import siteData from "../assets/data.json";
import type { SiteData } from "../types/site";
const typedSiteData = siteData as SiteData;
---

<Layout title="ねれ | Portfolio" description="ねれのポートフォリオ">
    <main id="main" class="container">
        <header class="header">
            <h1 class="name">ねれ / r2iz</h1>
        </header>

        <section class="section">
            <h2>Links</h2>
            <ul class="links">
                {
                    typedSiteData.links.map((link) => (
                        <li>
                            <a
                                href={link.href}
                                target={link.isExternal ? "_blank" : undefined}
                                rel={
                                    link.isExternal
                                        ? "me noopener noreferrer"
                                        : undefined
                                }
                            >
                                {link.text}
                            </a>
                        </li>
                    ))
                }
            </ul>
        </section>

        <section class="section">
            <h2>About</h2>
            <p>
                コンピューターが好きな高校生です。コンパイラやネットワーク技術に興味があり、
                特にReact、Node.js、Golangを使った開発をしています。最近はC言語も。
            </p>
            <p>最近は電音部が好きです。</p>
        </section>

        <section class="section">
            <h2>Skills</h2>
            <ul class="plain grid cols-auto">
                {
                    typedSiteData.skills.map((skill) => (
                        <li class="card">{skill}</li>
                    ))
                }
            </ul>
        </section>

        <section class="section">
            <h2>Projects</h2>
            <div class="grid cols-auto">
                {
                    typedSiteData.projects.map((project) => (
                        <article class="card">
                            <h3>{project.title}</h3>
                            <p>{project.description}</p>
                            <p>
                                <a
                                    href={project.link.href}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                >
                                    {project.link.text}
                                </a>
                            </p>
                        </article>
                    ))
                }
            </div>
        </section>

        <section class="section">
            <h2>Experience</h2>
            <div class="table-wrap">
                <table class="table">
                    <tbody>
                        {
                            typedSiteData.experience.map((exp) => (
                                <tr>
                                    <th scope="row" class="col-period">
                                        {exp.period}
                                    </th>
                                    <td class="col-desc">{exp.description}</td>
                                </tr>
                            ))
                        }
                    </tbody>
                </table>
            </div>
        </section>

        <section class="section">
            <h2>Contact</h2>
            <p>nere531[at]outlook.com</p>
        </section>
    </main>

    <style>
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 32px 24px;
        }

        .header {
            margin-bottom: 64px;
            text-align: left;
        }

        .name {
            font-size: 1.25rem;
            margin: 0;
            font-weight: 500;
            letter-spacing: 0.01em;
            color: var(--color-text);
        }

        .section {
            margin-bottom: 56px;
        }

        .section:last-child {
            margin-bottom: 0;
        }

        h2 {
            font-size: 0.875rem;
            margin: 0 0 24px 0;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.1em;
            color: var(--color-text-muted);
        }

        p {
            font-size: 1rem;
            line-height: 1.7;
            margin-bottom: 0;
        }

        .links {
            list-style: none;
            padding: 0;
            margin: 0;
            display: flex;
            flex-wrap: wrap;
            gap: 24px;
        }

        .links a {
            font-size: 0.9rem;
            color: var(--color-text);
            text-decoration: none;
            padding: 8px 0;
            border-bottom: 1px solid transparent;
            transition: all 0.2s ease;
        }

        .links a:hover {
            border-bottom-color: var(--color-accent);
        }

        .plain.grid {
            list-style: none;
            padding: 0;
            margin: 0;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 12px;
        }

        .card {
            border: 1px solid var(--color-border);
            border-radius: 4px;
            padding: 16px;
            background: var(--color-card-bg);
            transition: all 0.2s ease;
        }

        .card:hover {
            border-color: var(--color-text);
        }

        @media (prefers-color-scheme: light) {
            .card:hover {
                box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
            }
        }

        @media (prefers-color-scheme: dark) {
            .card:hover {
                box-shadow: 0 2px 8px rgba(255, 255, 255, 0.1);
            }
        }

        .card h3 {
            margin: 0 0 8px 0;
            font-size: 1rem;
            font-weight: 500;
        }

        .card p {
            font-size: 0.9rem;
            line-height: 1.6;
            margin-bottom: 12px;
            color: var(--color-text-muted);
        }

        .card p:last-child {
            margin-bottom: 0;
        }

        .card a {
            font-size: 0.9rem;
            color: var(--color-accent);
            text-decoration: none;
            border-bottom: 1px solid transparent;
            transition: border-color 0.2s ease;
        }

        .card a:hover {
            border-bottom-color: var(--color-accent);
        }

        .table-wrap {
            border: 1px solid var(--color-border);
            border-radius: 4px;
            overflow: hidden;
            background: var(--color-card-bg);
        }

        .table {
            margin: 0;
        }

        .table th {
            font-size: 0.875rem;
            font-weight: 500;
        }

        .table td {
            font-size: 0.9rem;
        }

        @media (max-width: 640px) {
            .container {
                padding: 24px 16px;
            }

            .header {
                margin-bottom: 48px;
            }

            .section {
                margin-bottom: 40px;
            }

            .name {
                font-size: 1.125rem;
            }

            .links {
                flex-direction: row;
                gap: 16px;
            }

            .plain.grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</Layout>
